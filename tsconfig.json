{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@utils/*": ["src/utils/*"],
      "@navigation/*": ["src/navigation/*"],
      "@theme/*": ["src/theme/*"],
      "@types/*": ["src/types/*"],
      "@assets/*": ["assets/*"], 
      "@constants/*": ["src/constants/*"], 
    },
  },
  "exclude": ["__tests__/**/*-test.ts"]
}
